{
    "manifest_version": 2,
    "name": "Campfyre",
    "version": "1.0",
    "description": "An extension which connects you with other people who are looking at the same content on the web.",
    "icons": {
        "16" : "images/campfire-16.png",
        "32" : "images/campfire-32.png",
        "64" : "images/campfire-64.png",
        "128" : "images/campfire-128.png"
    },
    "permissions": [
        "webNavigation",
        "tabs",
        "<all_urls>"
    ],
    "background": {
        "scripts": ["scripts/socket.io.js", "scripts/background.js"],
        "persistent": true 
    },
    "web_accessible_resources": [
        "content/chat.html",
        "content/chat.css"
    ]      
  }